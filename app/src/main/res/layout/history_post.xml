<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#91B7D9"
            android:layout_width="match_parent"
            android:layout_height="210dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/house"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorTab"
                        android:background="#3B4859"
                        android:text="HOUSE FOR SALE"
                        android:layout_width="167dp"
                        android:layout_height="22dp"/>
                <Button
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorTextBtn"
                        android:background="@color/colorText"
                        android:text="edit post"
                        android:layout_width="85dp"
                        android:layout_height="22dp"/>
                <Button
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorBackgroundTab"
                        android:background="@color/colorText"
                        android:text="Exit Post"
                        android:layout_width="85dp"
                        android:layout_height="22dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/house"
                        android:id="@+id/imageHome"
                        android:layout_width="167dp"
                        android:layout_height="158dp"/>
                <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/money"/>
                        <TextView
                                android:id="@+id/price"
                                android:layout_marginLeft="15dp"
                                android:text="$ 4,0000"
                                android:textSize="15sp"
                                android:textColor="@color/colorBackgroundTab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/home"/>
                        <TextView
                                android:id="@+id/sizeHouse"
                                android:layout_marginLeft="15dp"
                                android:text="5m x 15m"
                                android:textSize="15sp"
                                android:textColor="@color/colorBackgroundTab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bedroom"/>
                        <TextView
                                android:id="@+id/numberOfBedroom"
                                android:layout_marginLeft="15dp"
                                android:text="3 bedrooms"
                                android:textSize="15sp"
                                android:textColor="@color/colorBackgroundTab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bathroom"/>
                        <TextView
                                android:id="@+id/numberOfBathroom"
                                android:layout_marginLeft="15dp"
                                android:text="3 bedrooms"
                                android:textSize="15sp"
                                android:textColor="@color/colorBackgroundTab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/location"/>
                        <TextView
                                android:id="@+id/location"
                                android:layout_marginLeft="15dp"
                                android:text="Phnome Penh"
                                android:textSize="15sp"
                                android:textColor="@color/colorBackgroundTab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/time"/>
                    <TextView
                            android:id="@+id/datePost"
                            android:layout_marginLeft="2dp"
                            android:text="1 day ago"
                            android:textSize="15sp"
                            android:textColor="@color/colorBackgroundTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/viewer"/>
                    <TextView
                            android:id="@+id/viewPost"
                            android:layout_marginLeft="2dp"
                            android:text="100 views"
                            android:textSize="15sp"
                            android:textColor="@color/colorBackgroundTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/phone"/>
                    <TextView
                            android:layout_marginLeft="2dp"
                            android:text="Call"
                            android:textSize="15sp"
                            android:textColor="@color/colorBackgroundTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>