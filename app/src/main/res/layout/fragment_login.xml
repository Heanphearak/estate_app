<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:padding="20dp"
                                                   android:orientation="vertical"
                                                   tools:context="com.example.estateapp.fragments.RegisterFragment">



    <LinearLayout android:layout_width="0dp"
                  android:padding="20dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:background="@drawable/style_mainform"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  android:orientation="vertical"
                  android:layout_height="520dp">


        <TextView
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_seller"
                android:textColor="#A64454"
                android:textSize="20sp"
                android:textStyle="bold"/>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:background="@drawable/stlye_forminput"
                >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputLoginPhone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:hint="Password"
                android:background="@drawable/stlye_forminput"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputLoginPassword"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:gravity="center"
                      android:layout_height="100dp">

            <Button
                    android:id="@+id/btn_login"
                    android:text="Login"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:background="@drawable/style_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:id="@+id/back_to_register"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Back to register"
                android:textColor="@color/colorBackgroundTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>