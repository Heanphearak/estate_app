<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".MainActivity">


    <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/menu_toolbar"
            android:orientation="horizontal"
            android:background="#A64454"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:id="@+id/linear_dpdHouse"
                      android:layout_height="match_parent">

            <Button android:layout_width="match_parent"
                    android:text="HOUSE"
                    android:textColor="#fff"
                    android:background="#A64454"
                    android:id="@+id/dpdHouse"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="match_parent"/>


        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:id="@+id/linear_dpdVilla"
                      android:layout_height="match_parent">


            <Button android:layout_width="match_parent"
                    android:text="VILLA"
                    android:id="@+id/dpdVilla"
                    android:textColor="#fff"
                    android:background="#A64454"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:id="@+id/linear_dpdLand"
                      android:layout_height="match_parent">

            <Button android:layout_width="match_parent"
                    android:text="LAND"
                    android:id="@+id/dpdLand"
                    android:textColor="#fff"
                    android:background="#A64454"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:id="@+id/linear_dpdCondo"
                      android:layout_height="match_parent">

            <Button android:layout_width="match_parent"
                    android:text="CONDO"
                    android:id="@+id/dpdCondo"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_size_small"
                    android:background="#A64454"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:id="@+id/linear_dpdBuilding"
                      android:layout_height="match_parent">

            <Button android:layout_width="match_parent"
                    android:text="BUILDING"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_size_small"
                    android:background="#A64454"
                    android:textStyle="bold"
                    android:id="@+id/dpdBuilding"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>


    <FrameLayout
            android:id="@+id/fragmentContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            app:layout_constraintTop_toBottomOf="@id/menu_toolbar"
            android:layout_width="0dp"
            android:layout_height="0dp">

    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:background="#A64454"
            android:id="@+id/bottom_nav_view"
            app:menu="@menu/bottom_navigation_menu"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:labelVisibilityMode="labeled"
            android:layout_height="wrap_content"
            app:itemTextColor="@drawable/item_selected_nav_view"
            app:itemIconTint="@drawable/item_selected_nav_view"
    />

</androidx.constraintlayout.widget.ConstraintLayout>