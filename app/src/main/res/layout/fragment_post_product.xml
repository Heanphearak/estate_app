<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#91B7D9"
              android:padding="15dp"
              android:gravity="center"
              android:layout_height="match_parent">



    <LinearLayout android:layout_width="match_parent"
                  android:background="@drawable/style_mainform"
                  android:orientation="vertical"
                  android:layout_height="705dp">


        <LinearLayout

                android:layout_marginTop="15dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button android:layout_width="150dp"
                    android:background="#979FA8"
                    android:textColor="#A64454"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_medium"
                    android:text="Type of Estate"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>



        <TextView android:layout_width="match_parent"
                  android:text="Welcome To Estate Seller"
                  android:textStyle="bold"
                  android:textColor="#A64454"
                  android:textAlignment="center"
                  android:textSize="@dimen/font_size_x_large"
                  android:layout_height="wrap_content"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="15dp"
                      android:orientation="vertical"
                      android:padding="15dp"
                      android:layout_height="wrap_content">


            <LinearLayout android:layout_width="match_parent"
                          android:background="#fff"
                          android:gravity="center"
                          android:layout_height="100dp">

                <ImageView android:layout_width="150dp"
                           android:scaleType="fitXY"
                           android:src="@drawable/ic_image_black_24dp"
                           android:layout_height="90dp"/>

            </LinearLayout>


            <EditText android:layout_width="match_parent"
                      android:inputType="text"
                      android:hint="Price"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <EditText android:layout_width="match_parent"
                      android:inputType="text"
                      android:hint="Land Size"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <EditText android:layout_width="match_parent"
                      android:inputType="text"
                      android:hint="House Size"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <EditText android:layout_width="match_parent"
                      android:inputType="numberDecimal"
                      android:hint="Bedroom Number"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <EditText android:layout_width="match_parent"
                      android:inputType="numberDecimal"
                      android:hint="Bathroom Number"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>

            <Spinner android:layout_width="match_parent"
                     android:id="@+id/spinner_location"
                     android:backgroundTint="#A64454"
                     android:entries="@array/location_list"
                     android:layout_height="wrap_content">
            </Spinner>


            <EditText android:layout_width="match_parent"
                      android:inputType="date"
                      android:hint="Posted Date"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:drawableRight="@drawable/ic_date_range_black_24dp"
                      android:layout_height="wrap_content"/>



            <EditText android:layout_width="match_parent"
                      android:inputType="text"
                      android:hint="Phone Number"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <EditText android:layout_width="match_parent"
                          android:inputType="textMultiLine"
                          android:hint="Description"
                          android:background="#fff"
                          android:layout_height="60dp"/>

            </LinearLayout>



            <EditText android:layout_width="match_parent"
                      android:visibility="gone"
                      android:inputType="text"
                      android:hint="Name of Condo"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <EditText android:layout_width="match_parent"
                      android:visibility="gone"
                      android:inputType="text"
                      android:hint="Name of Building"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>

            <EditText android:layout_width="match_parent"
                      android:visibility="gone"
                      android:inputType="text"
                      android:hint="Type of Villa"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>

            <EditText android:layout_width="match_parent"
                      android:visibility="gone"
                      android:inputType="text"
                      android:hint="Villa Size"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <EditText android:layout_width="match_parent"
                      android:visibility="gone"
                      android:inputType="text"
                      android:hint="Building Size"
                      android:backgroundTint="#A64454"
                      android:textColorHint="#A64454"
                      android:layout_height="wrap_content"/>


            <LinearLayout
                    android:background="@drawable/google_map"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">


                <Button android:layout_width="150dp"
                        android:background="#fff"
                        android:text="Mark Location"
                        android:textAllCaps="false"
                        android:textColor="#2BA8D9"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>