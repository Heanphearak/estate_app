<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.estateapp.fragments.RegisterFragment">


    <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/style_mainform"
            android:orientation="vertical"
            android:layout_height="520dp">


        <TextView
                android:layout_marginTop="35dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_seller"
                android:textColor="#A64454"
                android:textSize="20sp"
                android:textStyle="bold"/>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:background="@drawable/stlye_forminput"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputRegisterPhone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:background="@drawable/stlye_forminput"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputRegisterPassword"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:background="@drawable/stlye_forminput"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputRegisterConfirmPassword"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>




        <Button
                android:id="@+id/btn_register"
                android:text="REGISTER"
                android:textColor="@color/colorText"
                android:background="@drawable/style_button"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="45dp"/>


        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Have already an account?"
                    android:textSize="15dp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/login_here"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:text="Login here"
                    android:textStyle="bold"
                    android:textColor="@color/colorBackgroundTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>