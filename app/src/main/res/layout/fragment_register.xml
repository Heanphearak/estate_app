<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="15dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.estateapp.fragments.RegisterFragment">


    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:background="@drawable/style_mainform"
            android:orientation="vertical"
            android:layout_height="520dp">


        <TextView
                android:layout_marginTop="35dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_seller"
                android:textColor="#A64454"
                android:textSize="20sp"
                android:textStyle="bold"/>


        <EditText
                android:id="@+id/inputPhone"
                android:layout_marginTop="55dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:hint="Phone"
                android:textStyle="bold"
                android:inputType="phone"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:background="@drawable/stlye_forminput"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>


        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_height="45dp"
                android:background="@drawable/stlye_forminput"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:id="@+id/password"
                tools:ignore="HardcodedText"
                android:hint="Password"/>

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:layout_height="45dp"
                android:background="@drawable/stlye_forminput"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:id="@+id/confirmPassword"
                tools:ignore="HardcodedText"
                android:hint="Confirm Password"/>

        <Button
                android:id="@+id/btn_register"
                android:text="REGISTER"
                android:textColor="@color/colorText"
                android:background="@drawable/style_button"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="45dp"/>


        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                        android:text="Have already an account?"
                        android:textSize="15dp"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/login_here"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:text="Login here"
                        android:textStyle="bold"
                        android:textColor="@color/colorBackgroundTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>